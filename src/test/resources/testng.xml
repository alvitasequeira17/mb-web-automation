<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="MultiBank Automation Test Suite" parallel="tests" thread-count="3">

    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
        <listener class-name="org.example.listeners.TestListener"/>
    </listeners>

    <!-- Chrome Browser Tests -->
    <test name="Chrome - Navigation and Layout Tests" preserve-order="true">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.NavigationTest"/>
        </classes>
    </test>

    <test name="Chrome - Authentication Tests" preserve-order="true">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.AuthenticationTest"/>
        </classes>
    </test>

    <test name="Chrome - Trading Functionality Tests" preserve-order="true">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.TradingTest"/>
        </classes>
    </test>

    <test name="Chrome - Content Validation Tests" preserve-order="true">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.ContentValidationTest"/>
        </classes>
    </test>

    <test name="Chrome - Why MultiBank Tests" preserve-order="true">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.WhyMultiBankTest"/>
        </classes>
    </test>


    <!-- Firefox Browser Tests (Cross-browser Execution) -->
    <test name="Firefox - Navigation Tests" preserve-order="true">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="tests.NavigationTest">
                <methods>
                    <include name="verifyTopNavigationDisplayed"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- Edge Browser Tests (Cross-browser Execution) -->
    <test name="Edge - Navigation Tests" preserve-order="true">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="tests.NavigationTest">
                <methods>
                    <include name="verifyTopNavigationDisplayed"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>
